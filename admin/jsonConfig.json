{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "ip": {
                    "type": "text",
                    "label": "IP",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "help": "IP address"
                },
                "port": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Port"
                },
                "param_requestInterval": {
                    "type": "number",
                    "min": 5,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
