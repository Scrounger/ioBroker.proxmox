{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "ip": {
                    "type": "text",
                    "label": "IP Address",
                    "sm": 12,
                    "md": 4,
                    "lg": 4
                },
                "port": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Port"
                },
                "requestInterval": {
                    "type": "number",
                    "min": 5,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Request Interval"
                },
                "name": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "User name"
                },
                "pwd": {
                    "type": "password",
                    "repeat": false,
                    "visible": true,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Password"
                },
                "server": {
                    "type": "select",
                    "options": [
                        {
                            "label": "Linux PAM standard authentication",
                            "value": "pam"
                        },
                        {
                            "label": "Proxmox VE authentication server",
                            "value": "pve"
                        }
                    ],
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Realm"
                },
                "_additionalInformationHeader": {
                    "newLine": true,
                    "type": "header",
                    "text": "Additional information",
                    "size": 3,
                    "sm": 12,
                    "md": 12,
                    "lg": 12
                },
                "requestDiskInformation": {
                    "type": "checkbox",
                    "label": "Request disk information",
                    "sm": 12,
                    "md": 6,
                    "lg": 6
                },
                "newTreeStructure": {
                    "type": "checkbox",
                    "label": "new tree structure",
                    "sm": 12,
                    "md": 6,
                    "lg": 6
                }
            }
        }
    }
}
